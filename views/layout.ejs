<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="shortcut icon" href="/images/mobile-logo.avif" type="image/x-icon">

    <!-- <link rel="stylesheet" href="../public/homepageStyles/homepage.css"> -->
    <link rel="stylesheet" href="/css/mainStyles/mainStyles.css">
    <link rel="stylesheet" href="/css/clp/clp.css">
    <link rel="stylesheet" href="/css/plp/plp.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>

    <!-- Site Navigation Bar -->
    <nav class="navbar">
        <div class="site-header">
            <div class="icon">
                <img src="/images/mobile-logo.avif" alt="Site-Logo">
            </div>
            <div class="site-logo">
                <a href="/" onclick="homepage()" >Mobiles</a>
            </div>
            <div class="user-auth">
                <button class="login"><i class="bi bi-person-fill"></i><span>Login / signup</span></button>
            </div>
        </div>
        <div class="categories-section">
            <% categories.forEach(category => { %>
                <div class="category" data-catid="<%= category._id %>" onclick="handleCategoryClick(this)" ><%= category.name %></div>
            <% }) %>
        </div>
    </nav>

    <script src="/scripts/mainScript.js"></script>
</body>
</html>