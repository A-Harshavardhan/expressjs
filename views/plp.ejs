

<%- include('layout', { title : title }) %>

  <div class="container">

    <div class="plp-banner">
      <img src="/images/plp-banner.jpg" alt="PLP Banner">
    </div>

    <% if(searchResultsCount > 0) { %>
      <div class="sort-by-section">
        <label>Sort By <span>:</span></label>
        <div class="custom-dropdown">
          <div class="dropdown-btn">
            <span>Select an option</span>
            <i class="arrow"></i>
          </div>
          <div class="dropdown-list">
            <div class="sort-by">
              <h2>Sort by</h2>
              <hr>
            </div>
            <div class="dropdown-item" data-value="productNameAsc">Product Name A - Z</div>
            <div class="dropdown-item" data-value="productNameDsc">Product Name Z - A</div>
            <div class="dropdown-item" data-value="priceLowHigh">Price Low to High</div>
            <div class="dropdown-item" data-value="priceHighLow">Price high to Low</div>
          </div>
        </div>
      </div>

      <div class="overlay"></div>

      <div class="plp-products-section">
        <div class="filters-section">
          <div class="close-icon-section">
            <div class="close-icon"><i class="bi bi-x"></i></div>
          </div>
          <h3>Filters</h3>
          <div class="filters">
            <% allmodels.forEach(model => { %>
              <p class="filter-models" data-mid="<%= model._id %>"><%= model.name %></p>
            <% }) %>
          </div>
        </div>
        <button class="filter-btn">Filters</button>

        <div class="products">
          <%- include('productsGrid') %>
        </div>
      </div>
      <% } else { %>
        <div class="no-products-data">
          <img class="product-not-found" src="/images/product_not_found.jpeg" alt="No products available image">
          <p class="noResults">Sorry currently no products are available for <span>"<%= model.name %>"</span> model</p>
      </div>
      <% } %>
  </div>

  <script src="/scripts/plp.js"></script>